# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
MODEL=gpt-4o  # Main LLM model for final response generation
EMBEDDING_MODEL=text-embedding-3-large  # Embedding model for vector search

# Data Configuration
DATA_DIR=ui/data  # Directory containing documents to index

# Sentence Window Configuration
SENTENCE_WINDOW_SIZE=3  # Number of sentences before/after for context window

# Retrieval Configuration
TOP_K=10  # Number of documents to retrieve initially
SIMILARITY_THRESHOLD=0.7  # Minimum similarity score for document filtering

# Advanced Retrieval Features
HYDE_ENABLED=true  # Enable HyDE (Hypothetical Document Embeddings)
HYBRID_SEARCH_ENABLED=true  # Enable hybrid search (Vector + BM25)
RERANK_ENABLED=true  # Enable LLM-based reranking
COMPRESSION_ENABLED=true  # Enable contextual compression

# Reranking Configuration
RERANK_TOP_N=5  # Number of documents to keep after reranking

# Performance and Cost Optimization
# Set to false to disable expensive features for cost savings
ENABLE_ALL_FEATURES=true  # Master switch for all advanced features

# Logging Configuration
LOG_LEVEL=INFO  # Logging level (DEBUG, INFO, WARNING, ERROR)

# === Phase 1 Enhancements ===

# Agentic Workflow Configuration (Phase 1a)
AGENT_ROUTING_ENABLED=true
QUERY_DECOMPOSITION_ENABLED=true
AGENT_ROUTING_THRESHOLD=0.8
MAX_SUBQUERIES=3
QUERY_COMPLEXITY_THRESHOLD=0.7
ROUTING_MODEL=gpt-3.5-turbo
DECOMPOSITION_MODEL=gpt-3.5-turbo
PARALLEL_EXECUTION_ENABLED=true
SUBQUERY_AGGREGATION_MODEL=gpt-4o-mini

# Semantic Cache Configuration (Phase 1b)
SEMANTIC_CACHE_ENABLED=false
CACHE_SIMILARITY_THRESHOLD=0.97
CACHE_TTL=3600
REDIS_CACHE_URL=redis://localhost:6379
MAX_CACHE_SIZE=10000
CACHE_KEY_PREFIX=rag_semantic:
CACHE_STATS_ENABLED=true
CACHE_WARMING_ENABLED=false

# Verification & Hallucination Detection Configuration (Phase 1c)
VERIFICATION_ENABLED=true
MULTI_LEVEL_CONFIDENCE=true
VERIFICATION_THRESHOLD=0.8
VERIFICATION_MODEL=gpt-4o-mini
ENSEMBLE_VERIFICATION=true
DEBATE_AUGMENTATION_ENABLED=false

# Confidence Calculation Weights (Phase 1c)
# These weights should sum to 1.0 for optimal confidence calculation
NODE_CONFIDENCE_WEIGHT=0.3
GRAPH_CONFIDENCE_WEIGHT=0.25
GENERATION_CONSISTENCY_WEIGHT=0.25
CITATION_ACCURACY_WEIGHT=0.2

# Verification Performance & Monitoring (Phase 1c)
MAX_VERIFICATION_TIME=2.0
LOW_CONFIDENCE_ALERT_THRESHOLD=0.6
VERIFICATION_METRICS_ENABLED=true
HALLUCINATION_ALERTS_ENABLED=true

# === Performance Goals (Phase 1c) ===
# Target quality increase: 96%+ (from 88-92%)
# Target latency increase: +0.5s for verification
# Target cost increase: +$0.02/query for verification
# Target error rate: <1% with confidence filtering