# ===========================================
# RAG CHATBOT - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and fill in your actual values

# ===========================================
# DATABASE (Required)
# ===========================================
# This will be automatically set by Vercel + Neon integration
# POSTGRES_URL="postgresql://user:password@host:port/database?sslmode=require"

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-random-secret-key-min-32-chars"

# ===========================================
# AI MODELS (Required)
# ===========================================
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY="your-google-ai-api-key"

# ===========================================
# VECTOR DATABASE (Required)
# ===========================================
# Get from: https://app.pinecone.io/organizations
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_INDEX_NAME="rag-documents"

# ===========================================
# HUGGINGFACE (Optional but Recommended)
# ===========================================
# Get from: https://huggingface.co/settings/tokens
# Leave empty to use public endpoint (rate limited)
HUGGINGFACE_API_KEY="your-huggingface-token"

# ===========================================
# FILE UPLOAD (Optional)
# ===========================================
# Get from: https://vercel.com/dashboard/stores/blob
# Only needed if you want file upload functionality
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# ===========================================
# RAG CONFIGURATION (Optional - Smart Defaults)
# ===========================================
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_DOCS=5
RAG_SIMILARITY_THRESHOLD=0.1
RAG_QUERY_EXPANSION=false
RAG_RERANKING=false

# ===========================================
# DATABASE CONFIGURATION (Optional)
# ===========================================
DB_MAX_POOL=10
POSTGRES_USE_CAMEL=false
