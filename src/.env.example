# Enhanced RAG System Configuration
# Copy this file to .env and fill in your values

# Required Configuration
OPENAI_API_KEY=your_openai_api_key_here
MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-3-large

# Performance Profile (choose one)
PERFORMANCE_PROFILE=balanced  # high_accuracy|balanced|cost_optimized|speed

# SOTA Feature Toggles
USE_UNIFIED_ORCHESTRATOR=true
AGENT_ROUTING_ENABLED=true
QUERY_DECOMPOSITION_ENABLED=true
VERIFICATION_ENABLED=true
SEMANTIC_CACHE_ENABLED=true

# Redis Configuration (for semantic caching)
REDIS_CACHE_URL=redis://localhost:6379
CACHE_SIMILARITY_THRESHOLD=0.97
CACHE_TTL=3600
MAX_CACHE_SIZE=10000

# Verification Settings
VERIFICATION_THRESHOLD=0.8
MULTI_LEVEL_CONFIDENCE=true
ENSEMBLE_VERIFICATION=true

# Agentic Workflow Settings
AGENT_ROUTING_THRESHOLD=0.8
MAX_SUBQUERIES=3
QUERY_COMPLEXITY_THRESHOLD=0.7
PARALLEL_EXECUTION_ENABLED=true

# Multimodal Features (requires additional dependencies)
MULTIMODAL_ENABLED=false
IMAGE_INDEXING_ENABLED=false
TTS_INTEGRATION_ENABLED=false
MULTIMODAL_THRESHOLD=0.6
CLIP_MODEL_NAME=openai/clip-vit-base-patch32

# Monitoring and Logging
UNIFIED_MONITORING_ENABLED=true
LOG_LEVEL=INFO

# Optional: Development Settings
DEBUG=false
ENABLE_PROFILING=false